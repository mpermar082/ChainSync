{
    // Package metadata
    "name": "chainsync",
    "version": "1.0.0",
    "description": "ChainSync - A TypeScript implementation",
    "main": "dist/index.js",
    "scripts": {
        // Build and compile TypeScript code
        "build": "tsc",
        // Run the compiled JavaScript code
        "start": "node dist/index.js",
        // Run the TypeScript code in development mode
        "dev": "ts-node src/index.ts",
        // Run unit tests
        "test": "jest",
        // Clean the dist directory
        "clean": "rm -rf dist"
    },
    "author": "mpermar082",
    "license": "MIT",
    "dependencies": {
        // Dependency for command-line argument parsing
        "minimist": "^1.2.0"
    },
    "devDependencies": {
        // TypeScript compiler and type definitions
        "typescript": "^5.0.0",
        "@types/node": "^18.0.0",
        // Type definitions for dependencies
        "@types/minimist": "^1.2.0",
        // Development tools
        "ts-node": "^10.0.0",
        "jest": "^29.0.0",
        "@types/jest": "^29.0.0"
    }
}